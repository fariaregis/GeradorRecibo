      spacing="10" style="-fx-padding: 20;">

    <Label text="Cadastro de Empresa" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
    
    <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
        <VBox spacing="15">
            <Label text="(Formulário simplificado - implemente conforme necessário)" 
                   style="-fx-text-fill: #666; -fx-font-style: italic;"/>
            
            <HBox spacing="10" alignment="CENTER">
                <Button text="Voltar" onAction="#handleVoltar" 
                        style="-fx-background-color: #6c757d; -fx-text-fill: white;"/>
            </HBox>
        </VBox>
    </ScrollPane>

</VBox>



