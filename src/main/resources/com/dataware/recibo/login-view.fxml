<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dataware.recibo.controller.LoginController">
    <padding>
        <Insets bottom="40" left="40" right="40" top="40" />
    </padding>

    <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #19344E;" text="Sistema de Gestão de Recibos" />
    <Label style="-fx-font-size: 14px; -fx-text-fill: #666;" text="DataWare Soluções" />
    
    <Region minHeight="30" VBox.vgrow="ALWAYS" />

    <VBox alignment="CENTER" maxWidth="400" spacing="15">
        <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Selecione uma Empresa:" />
        
        <ComboBox fx:id="empresaComboBox" maxWidth="Infinity" prefWidth="350" promptText="Selecione a empresa..." />
        
        <CheckBox fx:id="chkEmpresaPadrao" style="-fx-font-size: 11px;" text="Definir como empresa padrão (abrir automaticamente)" />
        
        <Button fx:id="btnEntrar" maxWidth="200" onAction="#handleEntrar" prefWidth="200" style="-fx-background-color: #19344E; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 10 40;" text="ENTRAR" />
        
        <Button fx:id="btnNovaEmpresa" maxWidth="200" onAction="#handleNovaEmpresa" prefWidth="200" style="-fx-background-color: transparent; -fx-text-fill: #19344E; -fx-font-size: 12px; -fx-underline: true;" text="Cadastrar Nova Empresa" />
    </VBox>
    
    <Region minHeight="30" VBox.vgrow="ALWAYS" />
    
    <Label fx:id="lblStatus" style="-fx-text-fill: red; -fx-font-size: 12px;" text="" />
    
    <Label style="-fx-font-size: 10px; -fx-text-fill: #999;" text="v1.0 - © 2025 DataWare" />
</VBox>
